<Window x:Class="POP_SF_62_2017_GUI.GUI.RadSaNamestajem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP_SF_62_2017_GUI.GUI"
        mc:Ignorable="d"
        Title="RadSaNamestajem" MaxHeight="600"
             SizeToContent="WidthAndHeight">
    <Grid>
        <StackPanel Orientation="Vertical">
            <ListBox Height="500" Name="lbNamestaj">

            </ListBox>
            <StackPanel Orientation ="Horizontal">
                <Button Content="Dodaj namestaj" Name="btnDodajNamestaj" 
                        Width="100" Height="30" Margin="5" 
                        Click="btnDodajNamestaj_Click"></Button>

                <Button Content="1" Width="100" Height="30" Margin="5"
                        ></Button>

                <Button Name="btnIzlaz" Content="Izlaz" Width="100" Height="30" Margin="5"
                        HorizontalAlignment="Right" Click="btnIzlaz_Click"></Button>

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
