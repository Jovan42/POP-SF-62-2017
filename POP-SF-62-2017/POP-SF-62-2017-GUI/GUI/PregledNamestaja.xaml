<Window x:Class="POP_SF_62_2017_GUI.GUI.PregledNamestaja"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP_SF_62_2017_GUI.GUI"
        mc:Ignorable="d"
        Title="PregledNamestaja" Height="300" Width="300">
    <Grid>
        <StackPanel Width="Auto"  HorizontalAlignment="Left" VerticalAlignment="Top">
            <StackPanel Margin="5" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Label Content="Naziv: "
                       HorizontalAlignment="Left" VerticalAlignment="Top"></Label>
                <TextBox Name="tbNaziv" Width="150"></TextBox>
            </StackPanel>
            <Button Name="btnSacuvaj" Content="Sacuvaj" Width="100" Height="30" Margin="5"
                        HorizontalAlignment="Right" Click="btnSacuvaj_Click"></Button>
            <Button Name="btnIzlaz" Content="Izlaz" Width="100" Height="30" Margin="5"
                        HorizontalAlignment="Right" Click="btnIzlaz_Click"></Button>
        </StackPanel>
        <StackPanel>

        </StackPanel>
    </Grid>
</Window>
