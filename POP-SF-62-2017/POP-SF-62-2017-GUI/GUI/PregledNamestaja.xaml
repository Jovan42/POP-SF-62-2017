<Window x:Class="POP_SF_62_2017_GUI.GUI.PregledNamestaja"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP_SF_62_2017_GUI.GUI"
        mc:Ignorable="d"
        Title="PregledNamestaja" Height="Auto" Width="300" MinHeight="300">
    <Grid Background="#FF252526" Height="Auto" Width="Auto">

        <ListBox Name="lbNamestaji" VerticalAlignment="Top" HorizontalAlignment="Left" Width ="300" MaxHeight="250"></ListBox>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" >
            <Button Content="Dodaj" Width="80" Height="25" Margin="5" Name="btnDodaj" Click="btnDodaj_Click"
                    Background="Gray" BorderBrush="White" Foreground="White"></Button>
            <Button Content="Izmeni" Width="80" Height="25" Margin="5" Name="btnIzmeni" Click="btnIzmeni_Click"
                    Background="Gray" BorderBrush="White" Foreground="White"></Button>
            <Button Content="Obrisi" Width="80" Height="25" Margin="5" Name="btnObrisi" Click="btnObrisi_Click"
                    Background="Gray" BorderBrush="White" Foreground="White"></Button>
        </StackPanel>
        
    </Grid>
</Window>
